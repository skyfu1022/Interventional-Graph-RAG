# Medical Graph RAG - Nginx 配置示例
#
# 此文件是 Nginx 反向代理的配置示例
# 要使用 Nginx，请将此文件复制为 nginx.conf 并根据需要修改
#
# 作者: Medical Graph RAG Team
# 版本: 1.0.0
# 更新时间: 2026-01-11

events {
    worker_connections 1024;
}

http {
    # 基础配置
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # 日志格式
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;
    error_log /var/log/nginx/error.log warn;

    # 性能优化
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # 上传文件大小限制（根据需要调整）
    client_max_body_size 100M;

    # Gzip 压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript
               application/json application/javascript application/xml+rss
               application/rss+xml font/truetype font/opentype
               application/vnd.ms-fontobject image/svg+xml;

    # 限流配置（防止 DDoS 攻击）
    limit_req_zone $binary_remote_addr zone=api_limit:10m rate=10r/s;

    # 上游服务器定义
    upstream medgraphrag_app {
        server app:8000;
        # 可以添加多个服务器实现负载均衡
        # server app2:8000;
        # server app3:8000;

        # 健康检查
        keepalive 32;
    }

    # HTTP 服务器
    server {
        listen 80;
        server_name localhost;

        # 字符集
        charset utf-8;

        # 根路径（重定向到 API 文档）
        location = / {
            return 301 /docs;
        }

        # API 代理
        location /api/ {
            # 限流
            limit_req zone=api_limit burst=20 nodelay;

            # 代理配置
            proxy_pass http://medgraphrag_app;
            proxy_http_version 1.1;

            # 请求头设置
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";

            # 超时设置
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;

            # 缓冲区设置
            proxy_buffering on;
            proxy_buffer_size 4k;
            proxy_buffers 8 4k;
            proxy_busy_buffers_size 8k;
        }

        # 健康检查端点（不记录日志）
        location = /health {
            proxy_pass http://medgraphrag_app;
            access_log off;
        }

        # API 文档（Swagger UI）
        location /docs {
            proxy_pass http://medgraphrag_app;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # API 文档（ReDoc）
        location /redoc {
            proxy_pass http://medgraphrag_app;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # OpenAPI JSON
        location /openapi.json {
            proxy_pass http://medgraphrag_app;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # WebSocket 支持（用于流式查询）
        location /api/v1/query/stream {
            proxy_pass http://medgraphrag_app;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_read_timeout 3600s;
            proxy_send_timeout 3600s;
        }

        # 错误页面
        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
            root /usr/share/nginx/html;
        }
    }

    # HTTPS 服务器（可选，需要 SSL 证书）
    # server {
    #     listen 443 ssl http2;
    #     server_name your-domain.com;
    #
    #     # SSL 证书配置
    #     ssl_certificate /etc/nginx/ssl/cert.pem;
    #     ssl_certificate_key /etc/nginx/ssl/key.pem;
    #     ssl_protocols TLSv1.2 TLSv1.3;
    #     ssl_ciphers HIGH:!aNULL:!MD5;
    #     ssl_prefer_server_ciphers on;
    #
    #     # HSTS（可选）
    #     add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    #
    #     # 其他配置与 HTTP 服务器相同
    #     # ...
    # }
}
