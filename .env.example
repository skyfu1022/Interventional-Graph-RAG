# Medical RAG 配置示例
# 复制此文件为 .env 并填入实际值

# RAG 引擎配置
RAG__WORKING_DIR=./rag_storage
RAG__CHUNK_TOKEN_SIZE=1200
RAG__CHUNK_OVERLAP_TOKEN_SIZE=100
RAG__TIKTOKEN_MODEL_NAME=gpt-4o
RAG__MAX_TOKEN_SIZE=8192
RAG__EMBEDDING_DIM=3072
RAG__ENABLE_LLM_CACHE=true

# LLM 配置
LLM__PROVIDER=openai
LLM__MODEL=gpt-4o
LLM__API_KEY=your-api-key-here
LLM__BASE_URL=
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=2000

# 嵌入模型配置
EMBEDDING__PROVIDER=openai
EMBEDDING__MODEL=text-embedding-3-large
EMBEDDING__API_KEY=your-api-key-here
EMBEDDING__BASE_URL=
EMBEDDING__EMBEDDING_DIM=3072
EMBEDDING__BATCH_SIZE=32

# Neo4j 配置
NEO4J__URI=bolt://localhost:7687
NEO4J__USERNAME=neo4j
NEO4J__PASSWORD=your-password-here
NEO4J__DATABASE=neo4j

# Milvus 配置
MILVUS__HOST=localhost
MILVUS__PORT=19530
MILVUS__COLLECTION_NAME=medical_rag
MILVUS__INDEX_TYPE=HNSW
MILVUS__METRIC_TYPE=COSINE
MILVUS__EMBEDDING_DIM=3072

# 应用配置
APP_NAME=Medical RAG
DEBUG=false
LOG_LEVEL=INFO
